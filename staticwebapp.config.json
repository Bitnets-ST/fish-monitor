{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
  },
  "platform": {
    "apiRuntime": "node:22"
  },
  "routes": [
    {
      "route": "/login",
      "rewrite": "/login"
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ],
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' *.azurestaticapps.net; connect-src 'self' *.azurestaticapps.net;"
  }
}
