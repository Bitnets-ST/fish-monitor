{
  "navigationFallback": {
    "rewrite": "/",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/_nuxt/*"]
  },
  "platform": {
    "apiRuntime": "node:22"
  },
  "routes": [
    {
      "route": "/*",
      "serve": "/",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' *.azurestaticapps.net; img-src 'self' data: blob: *.azurestaticapps.net; connect-src 'self' *.azurestaticapps.net;",
    "cache-control": "must-revalidate, max-age=0"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".svg": "image/svg+xml"
  }
}
